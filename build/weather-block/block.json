{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "weather-block/weather",
  "version": "0.1.0",
  "title": "Weather Block",
  "category": "widgets",
  "icon": "cloud",
  "description": "Display current weather conditions for a specified location.",
  "keywords": [
    "weather",
    "temperature",
    "forecast",
    "location"
  ],
  "example": {
    "attributes": {
      "location": "New York",
      "units": "metric",
      "displayMode": "auto"
    }
  },
  "attributes": {
    "location": {
      "type": "string",
      "default": ""
    },
    "units": {
      "type": "string",
      "default": "metric",
      "enum": [
        "metric",
        "imperial"
      ]
    },
    "displayMode": {
      "type": "string",
      "default": "auto",
      "enum": [
        "light",
        "dark",
        "auto"
      ]
    }
  },
  "supports": {
    "html": false,
    "align": [
      "left",
      "center",
      "right"
    ],
    "spacing": {
      "margin": true,
      "padding": true
    },
    "color": {
      "background": true,
      "text": true,
      "gradients": true
    },
    "typography": {
      "fontSize": true,
      "lineHeight": true
    }
  },
  "textdomain": "weather-block",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "viewScript": "file:./view.js",
  "render": "file:./render.php"
}